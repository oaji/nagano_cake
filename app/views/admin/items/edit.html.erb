<div class="container">
  <div class="row" style="margin-top:60px">
    <div class="col-xs-10 col-xs-offset-1">


      <p id="notice"><%= notice %></p> <!--サクセスメッセージ-->

      <%= form_with model: @item, url:admin_items_path(@item.id), method: :patch, local: true do |f| %><!--local: trueにすることで非同期で行わないようにしている-->
        <%= render 'layouts/error', model: f.object %><!--エラーメッセージ -->
      <% end %>

      <h2>商品編集画面</h2>

      <div class="row">

            <div class="col-xs-5">

              <%= form_for [:admin, @item] do |f| %>

              <%= attachment_image_tag @item, :image,style: "width:100%; "%>
              <%= f.attachment_field :image %>
            </div>
            <div class="col-xs-5 col-xs-offset-2">
              <table class="edit-form-table">
                <tbody>
                  <tr>
                    <th>商品名</th>
                    <td><%= f.text_field :name, class: "form-control" %></td>
                  </tr>
                  <tr>
                    <th>商品説明</th>
                    <td><%= f.text_area :introduction, class: "form-control" %></td>
                  </tr>
                  <tr>
                    <th>ジャンル</th>
                    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
                  </tr>
                  <tr>
                    <th>税抜き価格</th>
                    <td><%= f.text_field :price, class: "form-control" %></td>
                  </tr>
                  <tr>
                    <th>販売ステータス</th>
                    <td><%= f.select :is_active, [["販売中",true],["販売停止中",false]], include_blank: "--選択してください--" %></td>
                  </tr>
                </tbody>
              </table>
              <%= f.submit '更新', class: "btn btn-success btn-new-register btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>