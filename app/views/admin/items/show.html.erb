<div class="container">
  	<h1 style="margin-top: 120px;">商品詳細</h1>

	<div class="col-xs-5" style ="margin: 60px 0 60px 0">
		<%= attachment_image_tag @item, :image,style: "width:100%; "%>
	</div>

	<div class="col-xs-6" style ="margin: 60px 0 60px 0">

		<table class="table">

		  	<tr>
				<th>商品名</th>
				<td><%= @item.name %></td>
		  	</tr>

			<tr>
				<th>商品説明</th>
				<td><%= @item.introduction %></td>
		  	</tr>

			<tr>
			  	<th>ジャンル</th>
				<td><%= @item.genre.name %></td>
			</tr>

			<tr>
		       	<th>税込価格 （税抜価格）</th>
				<td><%= (@item.price*1.10).round %>   (<%= @item.price %>)  円</td>
		  	</tr>

			<tr>
			  	<th>販売ステータス</th>
				<td>
			  		<% if @item.is_active %>販売中
			  		<% else %>販売停止
				  	<% end %>
				</td>
			</tr>
		</table>
			<%= link_to '編集する',edit_admin_item_path(@item.id),class: "btn btn-primary btn-lg pull-right", data: {"turbolinks"=>false} %>
	  </div>
</div>