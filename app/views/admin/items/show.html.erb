<div class="row">
  <div class="col-xs-1" ></div>
  <div class="col-xs-5" style ="margin: 100px 0 100px 0">
    <%= attachment_image_tag @item, :image,style: "width:100%; "%>
  </div>
  <div class="col-xs-6" style ="margin: 100px 0 100px 0">

    <table class="table">
	  <tr>
		<th>商品名</th>
		<td><%= @item.name %></td>
	  </tr>

	  <tr>
		<th>商品説明</th>
		<td><%= @item.introduction %></td>
	  </tr>

	  <tr>
	    <th>ジャンル</th>
		<td><%= @item.genre.name %></td>
	  </tr>

	  <tr>
        <th>税込価格 （税抜価格）</th>
		<td><%= addTax(@item.price) %>   (<%= @item.price %>)  円</td>
	  </tr>

	  <tr>
	    <th>販売ステータス</th>
		<td>
		  <% if @item.is_stopped == false %>
		    販売中
		  <% elsif @item.is_stopped == true %>
		    販売停止
		  <% end %>
		</td>
	  </tr>
	  </table>

	  <%= link_to admin_items_edit_path(@item.id) do%>
		<label class="btn btn-info">編集する</label>
	  <% end %>
  </div>
</div>