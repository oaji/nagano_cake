<div class="container">
  <div class="row" style="margin-top:60px">
     <p id="notice"><%= notice %></p> <!--サクセスメッセージ-->
        <%= form_with model: @item, url:admin_items_path, method: :post ,local:true do |f| %>
          <%= render 'layouts/error', model: f.object %><!--エラーメッセージ -->
          <h2>商品登録画面</h2>
              <div class="col-xs-5" style ="margin: 60px 0 60px 0">

              <div class="item-img">
                <%= image_tag 'no_image.png', id: "file-preview", :size => '350x300' %>
              </div>
            <div class="item-new-form">
              <%= f.attachment_field :image %>
            </div>

          </div>
          <div class="col-xs-6" style ="margin: 60px 0 60px 0">
            <table class="new-form-table">
              <tbody>
                <tr>
                  <th>商品名</th>
                  <td><%= f.text_field :name, class: "form-control" %></td>
                </tr>
                <tr>
                  <th>商品説明</th>
                  <td><%= f.text_area :introduction, class: "form-control" %></td>
                </tr>
                <tr>
                  <th>ジャンル</th>
                  <td><%= f.collection_select :genre_id, Genre.where(is_active: true), :id, :name, include_blank: "--選択してください--" %></td>
                </tr>
                <tr>
                  <th>税抜き価格</th>
                  <td><%= f.text_field :price, class: "form-control" %></td>
                </tr>
                <tr>
                  <th>販売ステータス</th>
                  <td><%= f.select :is_active, [["販売停止中",true],["販売中",false]], include_blank: "--選択してください--" %></td>
                </tr>
              </tbody>
            </table>
            <%= f.submit '登録', class: "btn btn-success btn-new-register btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>