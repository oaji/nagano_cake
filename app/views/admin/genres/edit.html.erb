<div class="container" style="margin-top: 100px">
	<div class="row">
		<div class="col-xs-12">



			<%= form_with model: @genre, url:admin_genre_path(@genre.id), method: :patch, local: true do |f| %>
			<%= render 'layouts/error', model: f.object %>


				<div class="field">
					<%= f.label :name %>
					<%= f.text_field :name, class: "name" %>
				</div>

				<label><%= f.radio_button :is_active, :true %> 有効 </label>
				<label><%= f.radio_button :is_active, :false %> 無効</label>

				<div class="actions">
					<%= f.submit %>
				</div>
			<% end %>

		</div>
	</div>
</div>