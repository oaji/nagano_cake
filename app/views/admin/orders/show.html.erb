<div class="container">
	<h2 style="margin-top: 120px;">注文履歴詳細</h2>
	<table class="table">
		<tr>
			<th style="color:#000;">購入者</th>
			<td><%= @order.name %>
			</td>
		</tr>
		<tr>
			<th style="color:#000;">配送先</th>
				<td><%= @order.post_code %>
					<%= @order.address %><br>
					<%= @order.name %>
				</td>
		</tr>
		<tr>
			<th style="color:#000;">支払方法</th>
			<td><%= @order.how_to_pay %></td>
		</tr>
		<tr>
			<th style="color:#000;">注文ステータス</th>
			<%= form_with model: @order,url:admin_order_path(@order.id), method: :patch, remote: true do |f| %>
			<td><%= select :order, :order_status, Order.order_statuses.map { |k, v| [t("enums.order.order_status.#{k}"), v] } %><td>
			<td>
				<div class="actions row">
					<%= f.submit "更新", class: "btn-primary" %>
				</div>
			</td>
			<% end %>
		</tr>
	</table>
	<table class="table">
		<tr>
			<th style="color:#000;">商品名</th>
			<th style="color:#000;">単価(税込)</th>
			<th style="color:#000;">数量</th>
			<th style="color:#000;">小計</th>
			<th style="color:#000;">制作ステータス</th>
		</tr>
		<tr>
			<td><%#=@order.items.name%></td>
			<td><%=%></td>
			<td><%=%></td>
			<td><%=%></td>
			<td><%=%></td>
		</tr>
	</table>