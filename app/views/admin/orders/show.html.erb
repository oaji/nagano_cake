<div class="container">
<h1>注文履歴詳細</h1>
<table>
	<tr>
		<th>購入者</th><td><%= @order.family_name %>
		                  <%= @order.first_name %>
		</td>
	</tr>
	<tr>
		<th>配送先</th><td><%= @order.post_code %>
						  <%= @order.address %>
					  <br><%= @order.name %>
					  </td>
	</tr>
	<tr>
		<th>支払方法</th><td><%= @order.how_to_pay %></td>
	</tr>
	<tr>
		<th>注文ステータス</th><td><%= select :order, :order_status, Order.order_status.map { |k, v| [t("enums.order.order_status.#{k}"), v] } %>
			<div class="actions row">
				<%= f.submit "更新", class: "btn-primary" %>
			</div></td>
	</tr>
</table>
<table style="border:none" class="b">
	<tr>
		<th>商品名</th><th>単価</th><th>数量</th>
		<th>小計</th><th>制作ステータス</th>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td><%= @order.name %></td>
		<td><%= @order.price %></td>
		<td><%= @order.order_status %></td>
		<td><%= select :order, :order_status, Order.order_status.map { |k, v| [t("enums.order.order_status.#{k}"), v] } %></td>
		<td>
				<%= f.submit "更新", class: "btn-primary" %>
		</td>
	</tr>
</table>

	<tr>
		<th>商品合計</th><td><%= @order.total_payment %></td>
	</tr>
	<tr>
		<th>送料</th><td><%= @order.deliver_fee %></td>
	</tr>
	<tr>
		<th>請求金額合計</th><td><%= @order.total_payment %></td>
	</tr>
</div>