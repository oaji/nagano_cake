<div class="container">
<h1>注文履歴一覧</h1>
<table style="border:none" class="b">
	<thead>
		<tr>
			<th>購入日時</th><th>購入者</th>
			<th>注文個数</th><th>注文ステータス</th>
		</tr>
	</thead>
	<body>
		<% @order_items.each do |order| %>
			<tr>
				<td><%= order.created_at %>
				<%= link_to admin_order_path(order) %></td>
				<% @customer = %>
				<td><%= order.family_name %>
					<%= order.first_name %></td>
				</td>
				<td><%= order.quantity %></td>
				<td><%= order.order_status %></td>
			</tr>
		<% end %>
	</body>
</table>
</div>