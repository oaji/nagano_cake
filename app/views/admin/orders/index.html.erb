<div class="container">
<h1 style="margin-top: 120px;">注文履歴一覧</h1>
<table style="border:none" class="b">
	<thead>
		<tr>
			<th style="color: #000;">購入日時</th>
			<th style="color: #000;">購入者</th>
			<th style="color: #000;">注文個数</th>
			<th style="color: #000;">注文ステータス</th>
		</tr>
	</thead>
		<% @orders.each do |order| %>
		<tbody style="color: #000;">
			<tr>
				<td data-turbolinks="false"><%= link_to admin_order_path(order.id) do %>
						<%= l order.created_at, format: :long %>
					<% end %>
				</td>
				<td><%= order.customer.family_name %><%= order.customer.first_name %></td>
				<td><%= order.order_items.sum(:quantity) %></td>
				<td><%= order.order_status %></td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>