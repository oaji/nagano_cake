<h1 style="margin-top: 30px;">会員一覧</h1>

<table class="table">
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td><%= link_to customer.---,admin_customer_path(customer.id) %></td>
			<td><%= customer.email %></td>
			<td><%= customer.is_active %></td>
		</tr>
		<% end %>
	</tbody>
</table>
