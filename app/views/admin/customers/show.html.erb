
<h1><%= @customer.family_name %><%= @customer.first_name%>さんの会員詳細</h1>


<table class="table">

	<tr>
	<th>顧客ID</th>
	<td><%= @customer.id %></td>
	<td><%= @customer.is_valid %></td>
	</tr>

	<tr>
	<th>氏名</th>
	<td><%= @customer.family_name %><%= @customer.first_name %></td>
	</tr>

	<tr>
	<th>フリガナ</th>
	<td><%= @customer.family_name %><%= @customer.first_name %></td>
	</tr>

	<tr>
	<th>郵便番号</th>
	<td><%= @customer.post_code %></td>
	</tr>

	<tr>
	<th>住所</th>
	<td><%= @customer.address %></td>
	</tr>

	<tr>
	<th>電話番号</th>
	<td><%= @customer.telephone %></td>
	</tr>

	<tr>
	<th>メールアドレス</th>
	<td><%= @customer.email %></td>
	</tr>

	<tr>
		<td>
			<%= link_to '編集する', edit_admin_customer_path(@customer.id) %>
		</td>
		<td>
			<%= link_to '注文履歴一覧', admin_orders_path %>
		</td>
	</tr>

</table>

