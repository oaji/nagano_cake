<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 style="margin-top: 110px;"><%= @customer.family_name %><%= @customer.first_name%>さんの会員情報編集</h1>
			<div style="color: #000;">
			</div>
					<%= form_with model: @customer, url:admin_customer_path(@customer), method: :patch, local: true do |f| %>
						<table class="table" style="width:500px;">
						<%= flash[:fail] %>
						  <tr>
						    <th class="list_name">会員ID</th>
						    <td>
								<%= @customer.id %>
							</td>
						  </tr>

						  <tr>
						    <th class="list_name">氏名</th>
							    <td><div class="field">
										<%= f.text_field :family_name %>
									</div>
								</td>
								<td><div class="field">
										<%= f.text_field :first_name %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name"> フリガナ</th>
						    	<td><div class="field">
										<%= f.text_field :family_name_kana %>
									</div>
								</td>
								<td><div class="field">
										<%= f.text_field :first_name_kana %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name">郵便番号</th>
							    <td><div class="field">
										<%= f.text_field :post_code %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name">住所</th>
						    	<td><div class="field">
										<%= f.text_field :address %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name">電話番号</th>
						    	<td><div class="field">
										<%= f.text_field :telephone %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name">メールアドレス</th>
								<td><div class="field">
										<%= f.text_field :email %>
									</div>
								</td>
						  </tr>

						  <tr>
						    <th class="list_name">会員ステータス</th>
							    <td>
							    	<label><%= f.radio_button :is_deleted, :false %> 有効 </label>
									<label><%= f.radio_button :is_deleted, :true %> 無効</label>
							    </td>
						  </tr>
						</table>

							  	<div class="actions">
									<%= f.submit '変更を保存する',class: "btn btn-primary" %>
								</div>

						  <% end %>
		</div>
	</div>
</div>
