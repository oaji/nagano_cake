<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<div style=" margin-top: 100px; color: #fff;"><%= flash[:change] %></div><br>
			<h2 class="text-muted" style="color: #fff;"><strong>My page</strong></h2>
