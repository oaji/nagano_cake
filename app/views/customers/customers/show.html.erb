<%= link_to ' logout', destroy_customer_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %>

<h1>マイページ</h1>
<!--顧客情報-->
<table class="table">
	<thead>
		<tr>
			<th>お客様情報</th>
		</tr>

		<tr>
			<th>名前</th>
			<th><%= @customer.family_name_kana %><%= customer.first_name_kana %></th>
			<th><%= @customer.family_name %><%= customer.first_name %></th>
		</tr>

		<tr>
			<th>住所</th>
			<th><%= @customer.post_code %></th>
			<th><%= @customer.address %></th>
			<th>電話番号</th>
			<th><%= @customer.telephone %></th>
			<th>名前</th>
			<th><%= @customer.email %></th>
		</tr>
</table>

<% if @customer %>
<!-- 登録情報変更へのリンクボタン↓(リンク) -->
<th><%= link_to customers_customers_edit_path do %>
	<p>ボタン</p>
	<% end %>
</th>
<!-- 注文履歴一覧へのリンクボタン↓(リンク) -->
<th><%= link_to customers_orders_index_path do %>
	<p>ボタン</p>
	<% end %>
</th>
<!-- 配送先一覧へのリンクボタン↓(リンク) -->
<th><%= link_to customers_addresses_index_path do %>
	<p>ボタン</p>
	<% end %>
</th>

<!-- パスワード変更ボタン(リンク) -->
<th><%= link_to edit_customer_password_path do %>
	<p>ボタン</p>
	<% end %>
</th>

<% end %>