<div class="container">

	<%= link_to ' logout', destroy_customer_session_path, method: :delete, class: 'glyphicon glyphicon-log-out logout' %>

		<h1 style="margin-top: 50px;">マイページ</h1>
		<h3>登録情報</h3>
		<!-- 登録情報変更へのリンクボタン↓(リンク) -->
		<%= link_to edit_customer_path do %>
			<p>ボタン</p>
		<% end %>
		<!-- パスワード変更ボタン(リンク) -->
		<%= link_to edit_customer_password_path do %>
			<p>ボタン</p>
		<% end %>


	<!--顧客情報-->
	<table class="table">
		<thead>
			<tr>
				<th>お客様情報</th>
			</tr>
		</thead>

			<tr>
				<th>名前</th>
				<th><%= @customer.family_name_kana %><%= @customer.first_name_kana %></th>
				<th><%= @customer.family_name %><%= @customer.first_name %></th>
			</tr>

			<tr>
				<th>住所</th>
				<th><%= @customer.post_code %></th>
				<th><%= @customer.address %></th>
				<th>電話番号</th>
				<th><%= @customer.telephone %></th>
				<th>名前</th>
				<th><%= @customer.email %></th>
			</tr>

			<!-- 配送先一覧へのリンクボタン↓(リンク) -->
			<tr>
				<th><%= link_to addresses_path do %>
						<p>ボタン</p>
					<% end %>
				</th>
			</tr>
			<!-- 注文履歴一覧へのリンクボタン↓(リンク) -->
			<tr>
				<th><%= link_to orders_path do %>
						<p>ボタン</p>
					<% end %>
				</th>
			</tr>


	</table>

</div>
