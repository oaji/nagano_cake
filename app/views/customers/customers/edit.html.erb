<div class="jumbotron jumbotron-fluid">
	<div class="container">
		<div class="row center-block">
			<div class="col-xs-12">
					<h2 style="margin-top: 120px; margin-bottom: 20px; color: #fff;"><strong>登録情報編集</strong></h2>
					<%= form_with model: @customer,url:customers_path, method: :patch, local: true do |f| %>

						<%= render 'layouts/error', model: f.object %><!--エラーメッセージ -->

						<table class=" table mytable" style="padding: 10px;">
							<tr>
								<th>名前</th>
								<td><div class="field blank1">
								<%= f.label :姓,style: "color:#fff;" %>
								<%= f.text_field :family_name,:size=>"20" %>
								</div>
								</td>
								<td><div class="field blank1">
									<%= f.label :名,style: "color:#fff;" %>
									<%= f.text_field :first_name,:size=>"20" %>
								</div>
								</td>
							</tr>
							<tr>
								<th>フリガナ</th>
								<td>
									<div class="field">
										<%= f.label :セイ,style: "color:#fff;" %>
										<%= f.text_field :family_name_kana,:size=>"21" %>
									</div>
								</td>
								<td>
									<div class="field">
										<%= f.label :メイ,style: "color:#fff;" %>
										<%= f.text_field :first_name_kana,:size=>"21" %>
									</div>
								</td>
							</tr>


							<tr>
								<th>メールアドレス</th>
									<td>
										<div class="field blank">
											<%= f.text_field :email,:size=>"21" %>
										</div>
									</td>
							</tr>

							<tr>
								<th>郵便番号</th>
								<td>
									<div class="field blank">
										<%= f.text_field :post_code,:size=>"21" %>
									</div>
								</td>
							</tr>

							<tr>
								<th>住所</th>
								<td>
									<div class="field blank" >
										<%= f.text_area :address, class: "introduction" %>
									</div>
								</td>
							</tr>

							<tr>
								<th>電話番号(ハイフンなし)</th>
								<td>
									<div class="field blank">
										<%= f.text_area :telephone, class: "introduction" %>
									</div>
								</td>
							</tr>

							<tr>
								<th>メールアドレス</th>
								<td>
									<div class="field blank">
										<%= f.text_area :email, class: "introduction" %>
									</div>
								</td>
							</tr>
						</table>

						<div class="actions">
							<%= f.submit '編集内容を送信する', class: "btn btn-default",:style=>"background-color:black; color:#fff;" %>
						</div>
					<% end %>
					<div class="text-right" style="margin-right: 20px;">
					<%= link_to '退会する',customers_hide_path , class: "btn btn-default",:style=>"background-color:#800000; color:#fff;" %>
					</div>
			</div>
		</div>
	</div>
</div>
