<div class="container">
<h2 style="margin-top: 60px;">登録情報編集</h2>
	<%= form_with model: @customer,url:admin_customer_path, method: :patch, local: true do |f| %>

		<%= render 'layouts/error', model: f.object %><!--エラーメッセージ -->

		<table>
			<tr>
				<th>名前</th>
				<td>
					<h5>(姓)</h5>
					<div class="field">
					<%= f.text_field :family_name %>
					</div>
				</td>
				<td>
					<h5>(名)</h5>
					<div class="field">
						<%#= f.label :first_name %>
						<%= f.text_field :first_name %>
					</div>
				</td>
			</tr>

			<tr>
				<th>フリガナ</th>
				<td>
					<div class="field">
						<%#= f.label :family_name_kana %>
						<%= f.text_field :family_name_kana %>
					</div>
				</td>
				<td>
					<div class="field">
						<%#= f.label :first_name_kana %>
						<%= f.text_field :first_name_kana %>
					</div>
				</td>
			</tr>


			<tr>
				<th>メールアドレス</th>
					<td>
						<div class="field">
							<%#= f.label :email %>
							<%= f.text_field :email %>
						</div>
					</td>
			</tr>

			<tr>
				<th>郵便番号</th>
				<td>
					<div class="field">
						<%#= f.label :post_code %>
						<%= f.text_field :post_code %>
					</div>
				</td>
			</tr>

			<tr>
				<th>住所</th>
				<td>
					<div class="field">
						<%#= f.label :address %>
						<%= f.text_area :address, class: "introduction" %>
					</div>
				</td>
			</tr>

			<tr>
				<th>電話番号(ハイフンなし)</th>
				<td>
					<div class="field">
						<%#= f.label :telephone %>
						<%= f.text_area :telephone, class: "introduction" %>
					</div>
				</td>
			</tr>

			<tr>
				<div class="field">
					<th>メールアドレス</th>
					<td>
						<div class="field">
						<%#= f.label :email %>
							<%= f.text_area :email, class: "introduction" %>
						</div>
					</td>
				</div>
			</tr>

			<tr>
				<td>
					<div class="actions">
						<%= f.submit '編集内容を送信する', class: "btn btn-primary" %>
					</div>
				</td>
				<td></td>
				<td>
					<%= link_to '退会する',customers_hide_path , class: "btn btn-danger" %>
				</td>
			</tr>

		</table>
	<% end %>
</div>
