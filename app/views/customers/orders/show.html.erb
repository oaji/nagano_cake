<div class="container">
<h1>注文履歴詳細</h1>
<h2>注文情報</h2>
	<table border="1">
		<tr>
			<th>注文日</th><td><%= created_at %></td>
			<th>配送日</th><td><%= @order.post_code(@				order) %></td>
						  <td><%= @order.addressee %></td>
						  <td><%= @order.name %></td>
			<th>支払方法</th><td><%= @order.how_to_pay %></td>
			<th>ステータス</th><td><%= @order.order_status %></td>
		</tr>
	</table>

<h2>注文内容</h2>
	<table border="1">
		<tr>
			<th>商品</th><th>単価(税込)</th>
			<th>個数</th><th>小計</th>
		</tr>
		<tr>
			<td><%= @order.name %></td>
			<td><%= @items.price %></td>
			<td><%= @cart_item.quantity %></td>
			<td><%= %></td>
		</tr>
	</table>

<h2>請求情報</h2>
	<table border="1">
		<tr>
			<th>商品合計</th><td><%= %></td>
			<th>配送料</th><td><%= @order.deliver_fee %></td>
			<th>ご請求額</th><td><%= @order.total_payment %></td>
		</tr>
	</table>
</div>