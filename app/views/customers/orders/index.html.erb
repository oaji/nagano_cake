<div class="orders_background_image">
	<div class="container">
		<br><br><br><br>
	<h1 style="color: #fff;"><strong>注文履歴一覧</strong></h1>
		<table class="b" border="1">
			<body>
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>

					<tr>
						<td><%= order.created_at %></td>
						<td><%= order.post_code %><br>
							<%= order.addressee %><br>
							<%= order.name %>
						</td>
						<td><%= @items.name %></td>
						<td><%= order.total_payment %></td>
						<td><%= order.order_status %></td>
						<td><%= link_to '表示する', orders_show_path(@order), class: "btn-primary" %></td>
					</tr>
				<% end %>
			</body>
		</table>
	</div>
</div>