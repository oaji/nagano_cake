<div class="orders_background_image">
	<div class="container">
	<h1 style="color: #fff;"><strong>注文履歴一覧</strong></h1>
		<div class="font">
		<table class="b" border="1">
			<body>
				<tr>
					<th>注文日</th>
					<th>配送先</th>
					<th>注文商品</th>
					<th>支払金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
				<% @orders.each do |order| %>
					<tr>
						<td><%= order.created_at %></td>
						<td><%= order.post_code %><br>
							<%= order.address %><br>
							<%= order.name %></td>
						<td><% order.order_items.each do |s| %>
								<p><%= s.item.name %></p>
							<% end %>
						</td>
						<td><%= order.total_payment %></td>
						<td><%= order.order_status %></td>
						<td><%= link_to '表示する', order_path(order), class: "btn-primary btn-sm" %></td>
					</tr>
				<% end %>
			</body>
		</table>
		<% @orders.each do |order| %>
		<% end %>
		<%= paginate @orders %>
		</div>
	</div>
</div>