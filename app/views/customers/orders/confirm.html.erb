<div class="container">
	<h1>注文情報確認</h1>
		<table border="1">
		<tr>
			<th>商品名</th><th>単価(税込)</th>
			<th>数量</th><th>小計</th>
		</tr>
		<%= form_for @products do |f| %>
			<tr>
				<td><%= attachment_image_tag(@order.item) %>
					<%= @item.name %></td>
				<td><%= @item.price %></td>
				<td><%= @cart_item.quantity %></td>
				<td><%=  %></td>
			</tr>
		<% end %>
		</table>

		<table border="1">
			<tr>
				<th>送料</th><td><%= @order.deliver_fee %></td>
				<th>商品合計</th><td><%= %></td>
				<th>請求金額</th><td><%= total_payment %></td>
			</tr>
		</table>

	<tr>支払方法 <%= @order.how_to_pay %></tr>
	<tr>お届け先 <%= @order.addressee %></tr>
	<%= f.submit '購入を確定する',class: "btn-success text-center " %>
</div>