<div class="col-xs-2">
  <table class="table table-hover table-bordered mytable">

    <thead>

      <tr>
        <th class="active text-center"><h5 class="genre_said" style="color: #444;">ジャンル検索</h5></th>
      </tr>

    </thead>

    <tbody>

      <td>
        <%= link_to "全商品を表示", items_path, class:"ec-genre-list-item",:style=>" color:#fff;"  %>
      </td>

      <% genres.each do |genre| %>

        <tr>
          <td class="underline"><i class="fas fa-caret-right"> <%= link_to genre.name, search_path(genre.id), method: :get,:style=>" color:#fff;" %></i></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>