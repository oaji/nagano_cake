<div class="items_background">
  <div class="container">
    <div class="row" style="margin-top:150px">

      <%= render "genre_search", genres: @genres %>

      <div class="col-xs-1">
      </div>

      <div class='col-xs-9' style="color: #fff;">


      <div class='col-xs-9' style="background-color: rgba(0,0,0,0.5); padding-left: 80px;">

        <h2><strong>商品 一覧</strong></h2>

        <span>
          (全<%= @items.count %>件)
        </span>

        <div class="row" style="margin-top: 15px;">
          <% @items.each do |item| %>

            <div class="box" style="float:left; margin-right:20px;">

              <%= link_to item_path(item.id), data: {"turbolinks"=>false} do %>
                  <%= attachment_image_tag item, :image, size: "170x170",  fallback: "no_image.png"%><br>
              <% end %>

              <strong><h4 style="margin-top: 10px;"><%= item.name %></h4></strong>

              <h5 style="color: #fff;"><%= item.price %>円</h5>

            </div>
          <% end %>

          <div class="col-xs-6 col-xs-offset-4 ">
            <%= paginate @items, class: "paginate" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>