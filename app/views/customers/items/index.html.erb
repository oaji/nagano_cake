<div class="container">
   <div class="row" style="margin-top:100px">

   <!-- ジャンル検索（パーシャル） -->
    <%= render "genre_search", genres: @genres %>
    <!-- 商品一覧 -->
    <div class="col-xs-1">
    </div>


    <div class='col-xs-9'>
      <h2>商品 一覧</h2>

      <span>
        (全<%= @items.count %>件)
      </span>

      <div class="row">
        <% @items.each do |item| %>

          <div class="box" style="float:left; margin-right:20px;">
            <!-- 画像をクリックしたら商品詳細画面へ遷移 -->
            <%= link_to item_path(item.id), data: {"turbolinks"=>false} do %>
              <%= attachment_image_tag item, :image, size: "170x170",  fallback: "no_image.jpg"%><br>
            <% end %>
            <p><%= item.name %></p>
            <p><%= item.price %>円</p>
          </div>
        <% end %>
        <div class="col-xs-6 col-xs-offset-4 ">
            <!-- ページネーション用記載.コントローラに何項目ごとにページを分けるか記載 -->
        <!--   <%#= paginate @items %> -->
        </div>
      </div>
    </div>
  </div>
</div>
