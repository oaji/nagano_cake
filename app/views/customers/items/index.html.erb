<div class='row'>

  <div class='col-xs-3'>
    <span >
      <strong>ジャンルで検索</strong>
    </span>
    <% @genres.each do |genre| %>
      <%= link_to root_path(genre: genre.id) do %>
        <span style = "background-color: #2D714C" class="badge"><%= genre.name %></span>
      <% end %>


    <div class='col-xs-9'>
      <h2>商品一覧</h2>

        <span>
          (全<%= @items.total_count %>件中　<%= @items.count %>件)
        </span>
      </h2>
    <div>
      <% @items.each do |item| %>
        <%= item.name %>
        <%= item.price %>円<br>
        <%= item.introduction%>
      <% end %>
    </div>
  </div>
</div>
