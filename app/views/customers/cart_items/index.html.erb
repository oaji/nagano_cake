<div class="cart_background">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">

				<h2 style="margin-top: 150px;"><strong>Shopping cart</strong></h2>
				<br>
				<div>
					<%= link_to 'カートを空にする',cart_items_destroy_all_path,method: :delete,class: 'btn btn-default',"data-confirm" => "Are you sure?",remote:true,:style=>"background-color:#222; color:#fff; margin-bottom:10px;"%>
				</div>

				<div id="destroy_item">
					<%= render 'item_area' ,cart_items:@cart_items %>
				</div>

			</div>
		</div>
	</div>


	<div class="container">
		<%= link_to '買い物を続ける', root_path, :class => 'btn btn-default ',:style=>"background-color:#222; color:#fff; margin-bottom:10px;" %>
		<div data-turbolinks="false" class="text-center">
		<%= link_to '情報入力に進む', new_order_path, :class => 'btn btn-default btn-lg',:style=>"background-color:#020; color:#fff;" %>
		</div>
	</div>

</div>