<div class="cart_background">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">

				<h2 style="margin-top: 150px;"><strong>Shopping cart</strong></h2>
					<%= link_to 'カートを空にする',cart_items_destroy_all_path,method: :delete,class: 'btn btn-default',"data-confirm" => "Are you sure?", local: true,:style=>"background-color:#222; color:#fff; margin-bottom:10px;"%>
					<table class="table mytable">
					  <tr class="table_title">
					  	<th></th>
					    <th>商品名</th>
					    <th>単価</th>
					    <th>個数</th>
					    <th>小計</th>
					    <th></th>
					  </tr>
					<% @sum = 0 %>
				  	<% @cart_items.each do |cart_item| %>
					  <tr>
					  	<td><%= attachment_image_tag cart_item.item, :image, size: "60x60",  fallback: "no_image.jpg"%></td>
					  	<td><%= cart_item.item.name %></td>
					  	<td><%= (cart_item.item.price*1.10).round %></td>
						<% @sum += (cart_item.quantity*cart_item.item.price*1.10).round %>
					  	<td style="color: #000;">
					  		<%= form_with model: cart_item,url:cart_item_path(cart_item.id), method: :patch, local: true do |f| %>
						  		<%= f.number_field :quantity , value:cart_item.quantity, min:1 %>
								<%= f.submit '変更', class: "btn btn-default",:style=>"background-color:#444; color:#fff;" %>
					  		<% end %>
					  	</td>
					  	<td><%= (cart_item.item.price*cart_item.quantity*1.10).round %></td>
					  	<td><%= link_to '削除',cart_item_path(cart_item.id),method: :delete,class: 'btn btn-default',"data-confirm" => "Are you sure?",:style=>"background-color:#800000; color:#fff;" %></td>
					  </tr>

					<% end %>
					</table>
					<div class="text-right">
						<h4><strong>合計金額</strong></h4>
						<h3><strong><%= @sum %>円</strong></h3>
					</div>
			</div>
		</div>
	</div>

	<div class="container">
		<%= link_to '買い物を続ける', root_path, :class => 'btn btn-default ',:style=>"background-color:#222; color:#fff; margin-bottom:10px;" %>
		<div class="text-center">
			<%= link_to '情報入力に進む', new_order_path, :class => 'btn btn-default btn-lg',:style=>"background-color:#020; color:#fff;" %>
		</div>
	</div>
</div>