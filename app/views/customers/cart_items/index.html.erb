<h1 style="margin-top: 60px;">ショッピングカート</h1>
<%= button_to 'カートを空にする', @cart, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: 'btn btn-danger' %>
<table class="table">
  <tr>
  	<th></th>
    <th>商品名</th>
    <th>値段</th>
    <th>個数</th>
    <th>小計</th>
  </tr>

  <% @cart_items.cart_items.each do |cart_item| %>
	  <tr>
	  	<td><%= attachment_image_tag cart_item, :image, size: "60x60",  fallback: "no_image.jpg"%></td>
	  	<td><%= cart_item.name %></td>
	  	<td><%= cart_item.price %></td>
	  	<td><%= link_to '削除',cart_item_path(cart_item.id),method: :delete,class: 'btn btn-danger',"data-confirm" => "Are you sure?" %></td>
	  </tr>
  <% end %>

</table>

<%= link_to '買い物を続ける', root_path, :class => 'btn btn-primary' %>

