<div class="container">
<div class="row">
	<br><br>
	<h2>配送先登録/一覧</h2>
	<p><%= flash[:notice] %></p>
	<thead>
		<table style="border:none" class="a">
			<%= form_for(@address) do |f| %>
			<tr>
				<th>郵便番号(ハイフンなし)</th><th><%= f.text_field :post_code %></th>
			</tr>
			<tr>
				<th>住所</th><th><%= f.text_field :customer_address %></th>
			</tr>
			<tr>
				<th>宛名</th><th><%= f.text_field :name %></th>
						<th><%= f.submit "登録する", class: "btn-success btn-sm" %></th>
				</td>
			</tr>
			<% end %>
		</table>
	</thead>
	<br>
	<tbody>
		<table class="b" border="1">
			<tr>
				<th>郵便番号</th><th>住所</th><th>宛名</th><th></th>
			</tr>
			<% @addresses.each do |add| %>
			<tr>
				<td>
					<%= add.post_code %>
				</td>
				<td>
					<%= add.customer_address %>
				</td>
				<td><%= add.name %></td>
				<td>
					<div class="text-center">
					<%= link_to "編集する", edit_address_path(add), class: "btn-primary btn-sm " %>
					<%= link_to "削除する", address_path(add), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn-danger btn-sm " %>
					</div>
				</td>
			</tr>
			<% end %>
		</table>
			<% @addresses.each do |address| %>
			<% end %>
			<%= paginate @addresses %>
	</tbody>
</div>
</div>
